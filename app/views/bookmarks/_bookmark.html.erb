<div class="col-md-3">
  <div class="card mb-3 shadow-sm">
    <div style="text-align: center">
      <small><%= link_to bookmark.topic.title.downcase, topic_path(bookmark.topic.id) %></small>
    </div>
    <%= link_to image_tag("//image.thum.io/get/#{bookmark.url}", class: "card-img-top", alt: "Thumbnail [100%x225]", style: "height: 225px; width: 100%; display: block;" ), bookmark.url, target: "_blank" %>
    <div class="card-body">
      <p class="text-left">
        <small><%= bookmark.url.remove("http://", "https://", "www.") %></small>
      </p>
      <div class="btn-group">
        <%= link_to "Edit", edit_topic_bookmark_path(bookmark.topic, bookmark), class: 'btn btn-sm btn-outline-secondary' %>
        <%= link_to "Remove", topic_bookmark_path(bookmark.topic, bookmark), method: :delete, class: 'btn btn-sm btn-outline-secondary', data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
      </div>
    </div>
  </div>
</div>
