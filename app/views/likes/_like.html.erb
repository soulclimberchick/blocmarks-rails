<% if policy(Like.new).create? %>
  <div>
    <% if like = current_user.liked(bookmark) %>
      <%= link_to [@topic, bookmark, like], class: 'btn btn-sm btn-outline-secondary', method: :delete do %>
        <i class="glyphicon glyphicon-star-empty"> </i>unlike
      <% end %>
    <% else %>
      <%= link_to [@topic, bookmark, Like.new], class: 'btn btn-sm btn-outline-secondary', method: :post do %>
        <i class="glyphicon glyphicon-star"> </i>like
      <% end %>
    <% end %>
  </div>
<% end %>
